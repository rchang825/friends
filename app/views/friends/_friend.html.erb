<div id="<%= dom_id friend %>">
  <p>
    <strong>Name:</strong>
    <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= friend.phone %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= friend.twitter %>
  </p>

  <p>
    <%= button_to "Destroy this friend", friend, method: :delete %>
  </p>
</div>
